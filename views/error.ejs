<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Error</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        /* Custom style */
        .navbar {
            margin-bottom: 1rem;
        }

        .blink_me {
            animation: blinker 2s linear infinite;
        }

        @keyframes blinker {
            50% {
                opacity: 0;
            }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="m-4">
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container-fluid">
                    <a href="#" class="navbar-brand">FMS</a>
                    <button type="button" class="navbar-toggler" data-bs-toggle="collapse"
                        data-bs-target="#navbarCollapse2">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarCollapse2">
                        <div class="navbar-nav">
                            <a href="/" class="nav-item nav-link active">Home</a>
                            <a href="/file" class="nav-item nav-link active">Bulk UI</a>
                            <a href="/filter" class="nav-item nav-link active">Filter</a>
                            <a href="/test" class="nav-item nav-link active">Add Records</a>
                        </div>

                    </div>
                </div>
            </nav>


            <div class="card mx-auto" style="max-width: 65%;">
                <div class="card-header bg-danger">
                    <center>
                        <h3>
                            <%= textmessage %>
                    </center>
                </div>
                <div class="card-body">
                    <center>

                        <h5 class="card-title">
                            <%= reason %>
                        </h5>

                        <p></p>
                        <p></p>
                        <h5> To Rectify this mistake :</h5>

                        <b class="blink_me" style="color: red;">
                            <%= rectify %>
                        </b>
                        <br />
                        <p></p>
                        <a href="/file" type="submit" class="btn btn-success">Go back to Uploading data</a>
                        <p class="card-text"></p>

                    </center>
                </div>
                <p></p>
                <div class="row">
                    <div class="col ms-4">
                        <div class="mx-auto">
                            <table class="table table-warning table-striped table-bordered border border-dark rounded ">
                                <thead>

                                    <tr>
                                        <th>CSV Columns</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <% headers.forEach(function(headercolumn){ %>

                                        <tr>

                                            <td>
                                                <%= headercolumn %>
                                            </td>
                                            <% }); %>
                                        </tr>


                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="col me-4">
                        <div class="mx-auto">
                            <table class="table table-info table-striped table-bordered border border-dark rounded">
                                </tableclass>
                                <thead>
                                    <tr>
                                        <th>Database Columns</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% rows.forEach(function(rowscolumn){ %>
                                        <tr>
                                            <td>
                                                <%= rowscolumn.Field %>
                                            </td>

                                            <% }); %>
                                        </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>

        </div>
    </div>

</body>


</html>